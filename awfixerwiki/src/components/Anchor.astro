---
import { scrollToID } from "@/utils/scroll";

export interface Props {
  href: string;
  class?: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
  rel?: string;
}

const { 
  href, 
  children, 
  className = "", 
  target = "_self", 
  rel 
} = Astro.props;

const computedRel = target === "_blank" ? "noopener noreferrer" : rel;

---

<a
  href={href}
  class={className}
  target={target}
  rel={computedRel}
  onClick={() => scrollToID(href)}
>
  {children}
</a>