---
export type IconSize = "xxs" | "xs" | "sm" | "md" | "lg" | "xl" | "none";

export interface Props {
  name: string;
  size?: IconSize;
  className?: string;
}

const sizes: Record<IconSize, string> = {
  xxs: "w-3 h-3",
  xs: "w-3.5 h-3.5",
  sm: "w-4.5 h-4.5",
  md: "w-6.5 h-6.5",
  lg: "w-12 h-12",
  xl: "w-24 h-24",
  none: "",
};

const { name, size = "sm", className = "" } = Astro.props;
const sizeClass = sizes[size] || sizes.sm;
---

<div 
  class={`text-current flex items-center ${sizeClass} ${className}`}
  aria-hidden="true"
>
  <img 
    src={`/icons/${name}.svg`} 
    alt=""
    width="100%" 
    height="100%" 
  />
</div>