---
import { scrollToID } from "@/utils/scroll";
import { Link } from "./Link";

export interface CardNavItem {
  title: string;
  description: string;
  href: string;
  icon?: string;
  badge?: string;
  featured?: boolean;
}

export interface Props {
  title: string;
  description: string;
  items: CardNavItem[];
  className?: string;
}

const { title, description, items, className = "" } = Astro.props;

---

<div class={`bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden ${className}`}>
  <div class="p-6 border-b border-gray-200 dark:border-gray-700">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
      {title}
    </h2>
    <p class="text-gray-600 dark:text-gray-300 text-sm">
      {description}
    </p>
  </div>

  <div class="divide-y divide-gray-200 dark:divide-gray-700">
    {
      items.map((item, index) => (
        <div key={`${item.title}-${index}`} class="group cursor-pointer">
          <div class="flex items-start justify-between p-4 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <div class="flex items-center space-x-3">
              {item.icon && (
                <div class="w-6 h-6 text-blue-600">
                  <img 
                    src={`/icons/${item.icon}.svg`} 
                    alt=""
                    width="100%" 
                    height="100%" 
                  />
                </div>
              )}
              <div class="flex-1">
                <h3 class="font-medium text-gray-900 dark:text-white">
                  {item.title}
                </h3>
                {item.description && (
                  <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">
                    {item.description}
                  </p>
                )}
              </div>
            </div>
            
            {item.badge && (
              <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-medium text-blue-800 bg-blue-100 dark:text-blue-200">
                {item.badge}
              </span>
            )}
            
            {item.featured && (
              <span class="inline-flex items-center px-2.5 py-0.5 rounded text-xs font-medium text-orange-800 bg-orange-100 dark:text-orange-200">
                Featured
              </span>
            )}
            
            <div class="flex items-center">
              <Link 
                href={item.href}
                class="flex items-center justify-between p-3 rounded-lg hover:bg-white dark:hover:bg-gray-600 transition-colors group-hover:border-blue-500 group-hover:text-blue-600 dark:group-hover:border-blue-400"
              >
                <div>
                  <h4 class="font-medium text-gray-900 dark:text-white">
                    {item.title}
                  </h4>
                  {item.description && (
                    <p class="text-sm text-gray-600 dark:text-gray-300">
                      {item.description}
                    </p>
                  )}
                </div>
                
                <div class="flex items-center space-x-2">
                  {item.featured && (
                    <span class="text-orange-600 dark:text-orange-400">
                      Learn more
                    </span>
                  )}
                </div>
              </Link>
            </div>
          </div>
        ))
      }
    }
  </div>
  
  <CardNavIsland client:load items={items} />
</div>